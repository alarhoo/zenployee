<mvc:View
	displayBlock="true"
	controllerName="zenployee.controller.EmployeeMaster"
	height="100%"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage
		id="idDynamicPage"
		toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Employees ({emp>/length})" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Content -->
		<f:content>
			<List items="{emp>/}">
				<ObjectListItem
					title="{emp>emp_main_first} {emp>emp_main_last}"
					number="{emp>emp_main_id}"
					numberUnit=""
					icon="/test-resources/sap/uxap/images/imageID_275314.png"
					press="onListItemPress"
					type="Active">
					<firstStatus>
						<ObjectStatus
							text="{= ${emp>emp_main_billable} === '1' ? 'Full-time' : 'Contractor'}"
							state="{= ${emp>emp_main_billable} === '1' ? 'Success' : 'Warning'}" />
					</firstStatus>
					<secondStatus>
						<ObjectStatus
							icon="{= ${emp>emp_main_active} === '1' ? 'sap-icon://sys-enter' : 'sap-icon://sys-cancel'}"
							text="{= ${emp>emp_main_active} === '1' ? 'Active' : 'Inactive'}"
							state="{= ${emp>emp_main_active} === '1' ? 'Indication14' : 'Indication12'}"
							inverted="true" />
					</secondStatus>
					<!-- <markers>
						<ObjectMarker type="Favorite" />
						<ObjectMarker type="Locked" />
					</markers> -->
					<ObjectAttribute text="{emp>emp_main_designation}" />
					<ObjectAttribute text="{emp>emp_main_email}" />
					<ObjectAttribute text="{emp>emp_main_dob}" />
				</ObjectListItem>
			</List>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button
					type="Accept"
					text="Accept" />
				<Button
					type="Reject"
					text="Reject" />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>
