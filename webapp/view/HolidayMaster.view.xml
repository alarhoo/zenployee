<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="zenployee.controller.HolidayMaster"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%">
	<f:DynamicPage
		toggleHeaderOnTitleClick="false"
		class="sapUiNoContentPadding">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="View Leave Details" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Content -->
		<f:content>
			<List
				headerText="Employees"
				items="{
					path: 'emp>/'
				}"
				growing="true"
				growingThreshold="150"
				sticky="HeaderToolbar">
				<headerToolbar>
					<OverflowToolbar>
						<Title
							text="Employees"
							level="H2" />
						<ToolbarSpacer />
						<SearchField width="50%" />
						<Button
							icon="sap-icon://sort"
							type="Transparent" />
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<CustomListItem type="Active">
						<HBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Avatar
								src="./test-resources/sap/uxap/images/imageID_275314.png"
								class="sapUiSmallMarginEnd" />
							<FlexBox
								alignItems="Start"
								justifyContent="SpaceBetween"
								width="100%">
								<VBox>
									<Title
										text="{emp>emp_main_first} {emp>emp_main_last}"
										titleStyle="H4"
										class="sapUiTinyMarginBottom" />
									<ObjectAttribute
										text="{emp>emp_main_designation}"
										class="sapUiTinyMarginBottom" />
									<Link
										text="{emp>emp_main_email}"
										href="mailto:{emp>emp_main_email}" />
								</VBox>
								<VBox class="sapUiSmallMarginEnd">
									<ObjectIdentifier
										title="{emp>emp_main_id}"
										class="sapUiTinyMarginBottom" />
									<ObjectStatus
										text="{= ${emp>emp_main_billable} === '1' ? 'Full-time' : 'Contractor'}"
										state="{= ${emp>emp_main_billable} === '1' ? 'Success' : 'Warning'}"
										class="sapUiTinyMarginBottom" />
									<ObjectStatus
										icon="{= ${emp>emp_main_active} === '1' ? 'sap-icon://sys-enter' : 'sap-icon://sys-cancel'}"
										text="{= ${emp>emp_main_active} === '1' ? 'Active' : 'Inactive'}"
										state="{= ${emp>emp_main_active} === '1' ? 'Indication14' : 'Indication12'}"
										inverted="true" />
								</VBox>
							</FlexBox>
						</HBox>
					</CustomListItem>
				</items>
			</List>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button
					type="Accept"
					text="Accept" />
				<Button
					type="Reject"
					text="Reject" />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>
