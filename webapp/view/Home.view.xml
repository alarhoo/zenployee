<mvc:View
	controllerName="zenployee.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.f"
	xmlns:m="sap.m"
	height="100%">
	<m:ScrollContainer
		vertical="true"
		height="100%">
		<ShellBar
			title="Zenployee"
			secondTitle="Short description"
			homeIcon="../img/logo.png"
			showNotifications="true"
			notificationsNumber="2">
			<!-- <menu>
				<m:Menu>
					<m:MenuItem
						text="Flight booking"
						icon="sap-icon://flight" />
					<m:MenuItem
						text="Car rental"
						icon="sap-icon://car-rental" />
				</m:Menu>
			</menu> -->
			<profile>
				<m:Avatar initials="UI" />
			</profile>
			<searchManager>
				<SearchManager
					id="searchField"
					enableSuggestions="true"
					suggestionItems="{
						path: '/ProductCollection',
						sorter: {
							path: 'Name'
						}
					}">
					<suggestionItems>
						<m:SuggestionItem
							text="{Name}"
							description="{
								path: 'Price'
							} {
								path: 'CurrencyCode'
							}"
							key="{ProductId}" />
					</suggestionItems>
				</SearchManager>
			</searchManager>
		</ShellBar>
		<mvc:XMLView
			viewName="zenployee.view.Launchpad"
			height="100%"
			displayBlock="true" />
	</m:ScrollContainer>
</mvc:View>
