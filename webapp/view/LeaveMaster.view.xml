<mvc:View
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="zenployee.controller.LeaveMaster"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%">
	<f:DynamicPage
		id="dynamicPageLeaveMaster"
		toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="View Leave Details" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Content -->
		<f:content>
			<List
				id="listEmployees"
				headerText="Employees"
				mode="None"
				items="{
					path: 'emp>/'
				}"
				growing="true"
				growingThreshold="15"
				class="sapUiMediumMarginBottom"
				sticky="HeaderToolbar">
				<headerToolbar>
					<OverflowToolbar>
						<Title
							text="Employees"
							level="H2" />
						<ToolbarSpacer />
						<SearchField
							search=".onSearch"
							width="50%" />
						<Button
							icon="sap-icon://sort"
							type="Transparent" />
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<CustomListItem
						type="Active"
						press="onListItemPress">
						<HBox>
							<!--<core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>-->
							<Avatar
								src="./test-resources/sap/uxap/images/imageID_275314.png"
								class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
								<Link
									text="{emp>emp_main_first} {emp>emp_main_last}"
									target="./test-resources/sap/uxap/images/imageID_275314.png" />
								<Label text="{emp>emp_main_designation}" />
								<ObjectAttribute text="{emp>emp_main_last}" />
								<ObjectIdentifier
									title="{emp>emp_main_dob}"
									text="{emp>emp_main_email}" />
								<ObjectStatus
									text="{= ${emp>emp_main_active} === '1' ? 'Active' : 'Inactive'}"
									state="{= ${emp>emp_main_active} === '1' ? 'Success' : 'Error'}" />
							</VBox>
						</HBox>
					</CustomListItem>
				</items>
			</List>
			<!--<List id="idListProduct" items="{ path: 'emp>/', sorter: { path: 'emp_main_first' } }">-->
			<!--	<headerToolbar>-->
			<!--		<Toolbar>-->
			<!--			<Title text="JSON Model Data"/>-->
			<!--			<ToolbarSpacer/>-->
			<!--			<SearchField width="50%" search=".onFilterProducts"/>-->
			<!--		</Toolbar>-->
			<!--	</headerToolbar>-->
			<!--	<items>-->
			<!--		<ObjectListItem icon="./test-resources/sap/uxap/images/imageID_275314.png" title="{emp>emp_main_first} {emp>emp_main_last}"-->
			<!--			number="{emp>emp_main_active}" type="Active" press="onItemSelected">-->
			<!--			<firstStatus>-->
			<!--				<ObjectStatus text="{= ${emp>emp_main_active} === '1' ? 'Active' : 'Inactive'}"-->
			<!--					state="{= ${emp>emp_main_active} === '1' ? 'Success' : 'Error'}"></ObjectStatus>-->
			<!--			</firstStatus>-->
			<!--		</ObjectListItem>-->
			<!--	</items>-->
			<!--</List>-->
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button
					type="Accept"
					text="Accept" />
				<Button
					type="Reject"
					text="Reject" />
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>
