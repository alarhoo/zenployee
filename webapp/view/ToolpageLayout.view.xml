<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="zenployee.controller.ToolpageLayout"
	height="100%"
	xmlns:tnt="sap.tnt">
	<tnt:ToolPage
		id="idToolPage"
		class="sapUiDemoToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="idSideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press=".onButtonSideNavPress"
					tooltip="{i18n>collpaseMenuButtonText}">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
				<ToolbarSpacer />
				<Title
					text="{i18n>appTitle}"
					level="H2" />
				<ToolbarSpacer />
				<!--<Button id="errorButton" icon="sap-icon://message-popup" visible="{= ${alerts>/alerts/errors}.length === 0 ? false : true }"-->
				<!--	type="Transparent" press=".onMessagePopoverPress" tooltip="{i18n>errorButtonTooltip}">-->
				<!--	<layoutData>-->
				<!--		<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>-->
				<!--	</layoutData>-->
				<!--</Button>-->
				<!--<Button id="notificationButton" icon="sap-icon://ui-notifications"-->
				<!--	visible="{= ${alerts>/alerts/notifications}.length === 0 ? false : true }" type="Transparent" press=".onNotificationPress"-->
				<!--	tooltip="{i18n>notificationButtonTooltip}">-->
				<!--	<layoutData>-->
				<!--		<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>-->
				<!--	</layoutData>-->
				<!--</Button>-->
				<MenuButton
					id="userButton"
					icon="sap-icon://customer"
					text="Manjunath">
					<menu>
						<Menu>
							<MenuItem
								text="{i18n>menuButtonHelpText}"
								icon="sap-icon://sys-help" />
							<MenuItem
								text="{i18n>menuButtonThemeText}"
								icon="sap-icon://palette">
								<items>
									<MenuItem
										text="Fiori 3 Light"
										key="sap_fiori_3"
										press="handleThemeSwitch" />
									<MenuItem
										text="Fiori 3 Dark"
										key="sap_fiori_3_dark"
										press="handleThemeSwitch" />
									<MenuItem
										text="Belize Plus"
										key="sap_belize_plus"
										press="handleThemeSwitch" />
									<MenuItem
										text="Belize"
										key="sap_belize"
										press="handleThemeSwitch" />
									<MenuItem
										text="Fiori HCB"
										key="sap_fiori_3_hcb"
										press="handleThemeSwitch" />
									<MenuItem
										text="Fiori HCW"
										key="sap_fiori_3_hcw"
										press="handleThemeSwitch" />
									<MenuItem
										text="Belize HCB"
										key="sap_belize_hcb"
										press="handleThemeSwitch" />
									<MenuItem
										text="Belize HCW"
										key="sap_belize_hcw"
										press="handleThemeSwitch" />
								</items>
							</MenuItem>
							<MenuItem
								text="{i18n>menuButtonLogoutText}"
								icon="sap-icon://log" />
						</Menu>
					</menu>
				</MenuButton>
				<!--<Button id="userButton" icon="sap-icon://customer" text="User Name" type="Transparent" press=".onUserNamePress">-->
				<!--	<layoutData>-->
				<!--		<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>-->
				<!--	</layoutData>-->
				<!--</Button>-->
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation selectedKey="{side>/selectedKey}">
				<tnt:NavigationList items="{
					path: 'side>/navigation',
					templateShareable: false
				}">
					<tnt:NavigationListItem
						text="{
							path: 'side>titleI18nKey',
							formatter: '.getBundleText'
						}"
						icon="{side>icon}"
						expanded="{side>expanded}"
						items="{
							path: 'side>items',
							templateShareable: false
						}"
						key="{side>key}"
						href="#/{side>key}">
						<tnt:NavigationListItem
							text="{
								path: 'side>titleI18nKey',
								formatter: '.getBundleText'
							}"
							key="{side>key}"
							href="#/{side>key}" />
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList items="{
						path: 'side>/fixedNavigation',
						templateShareable: false
					}">
						<tnt:NavigationListItem
							text="{
								path: 'side>titleI18nKey',
								formatter: '.getBundleText'
							}"
							icon="{side>icon}"
							key="{side>key}"
							href="#/{side>key}" />
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="idMainContentsApp" />
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
